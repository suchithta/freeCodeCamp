#define SEG_DATA_DIR DDRD
#define SEG_CTRL_DIR DDRB
#define SEG_DATA     PORTD
#define SEG_CTRL     PORTB

unsigned char sev_ses[10] {0x00,0x01,0x02,0x04,0x08,0x10,0x20,0x40,0x80,0xff};
unsigned char sev_se[9] {0xff,0xfe,0xfc,0xf8,0xf0,0xe0,0xc0,0x80,0x00};
//{0xbf,0x86,0xdb,0xcf,0xe6,0xed,0xfd,0x87,0xff,0xef};
 
 
 
void setup()
{
  SEG_DATA_DIR = 0xff;
  SEG_CTRL_DIR =0xff;
}





void loop() {
  unsigned char j,i;
for(j=0;j<10;j++)
{
  SEG_DATA = sev_ses[j]|SEG_DATA;
  delay(1000);
}
for(i=0;i<9;i++)
{
  SEG_DATA = sev_se[i];
  delay(1000);
}
}


